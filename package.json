{
  "name": "toast",
  "version": "0.0.1",
  "description": "A crud wrapper around fetch API written in TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "start:dev": "nodemon --watch 'src/**/*.ts' --ignore '__test__/**/*.test.ts' --exec 'ts-node' src/lib/index.ts",
    "build": "rm -rf ./dist/ && tsc",
    "test": "jest --coverage --detectOpenHandles --forceExit",
    "eslint": "eslint ./src/lib/**/*.ts"
  },
  "keywords": [
    "ts",
    "typescript",
    "crud"
  ],
  "author": {
    "name": "Gustavo Cavalcante",
    "email": "nowayhecodes@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nowayhecodes/toast"
  },
  "license": "GPL",
  "dependencies": {
    "@types/node": "^14.0.27",
    "axios": "^0.21.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.7",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@types/jest": "^26.0.8",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "axios-mock-adapter": "^1.19.0",
    "babel-jest": "^26.6.3",
    "concurrently": "^5.2.0",
    "eslint": "^7.14.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "jest": "^26.2.2",
    "moxios": "^0.4.0",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  }
